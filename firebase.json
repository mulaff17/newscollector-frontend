{
  "hosting": {
    "public": "dist/cybernews-frontend/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)", 
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable" 
          }
        ]
      },
      {
        "source": "/index.html",  
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"  
          }
        ]
      }
    ]
  }
}
